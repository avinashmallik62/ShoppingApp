<%- include("./partials/header") %>
    <%- include("./partials/navbar") %>
        <div class="row">
            <%for(let product of products){%>
                <div class="col-lg-3 col-md-6 col-sm-12">
                    <div class="card text-center m-3" style="width: 18rem;">
                        <img src="<%=product.img%>" class="card-img-top" width="250px" height="200px">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%=product.name%>
                            </h5>
                            <p class="card-text">
                                <%=product.desc.substring(0,70)%>
                            </p>
                            <a href="/products/<%=product._id%>" class="btn btn-outline-primary">More Info</a>
                        </div>
                    </div>
                </div>
                <% }%>
        </div>
        <%- include("./partials/footer") %>