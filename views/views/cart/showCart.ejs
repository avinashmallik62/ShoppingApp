<%-include("../partials/header")%>
<%-include("../partials/navbar")%>
<div class="container" style="margin-top: 5rem;">
    <%-include("../partials/flash")%> 
    <div class="row">
        <div class="col-lg-8">
            <% for(let item of cart){ %>
                <div class="card m-5" style="max-width: 540px;">
                    <div class="row no-gutters">
                      <div class="col-md-4">
                        <img src="<%=item.img%>" width = "200px">
                      </div>
                      <div class="col-md-8">
                        <div class="card-body p-4" >
                          <h5 class="card-title"><%=item.name%> </h5>
                          <p class="card-text"><strong> &#8377; <%=item.price%></strong> </p>
                          <form action="/user/<%=currentUser._id%>/cart/<%=item._id%>?_method=DELETE" method="post">
                            <button class="btn btn-sm btn-danger">remove</button>
                          </form>
                        </div>
                      </div>
                    </div>
                </div>
            <% } %>  
        </div>
        <div class="col-lg-4 mt-5">
          <ul class="list-group">
          <% totalCost = 0 %>
          <% for(let item of cart){ %>
            <li class="list-group-item"><%=item.name%>  - <strong> &#8377; <%=item.price  %> </strong></li>
            <% totalCost += item.price %>
          <% } %>
          </ul>
          
          <p class="list-group-item">Total Cost : &#8377; <%= totalCost  %></p> 

          <a href="/user/<%=currentUser._id %>/payment" class = "btn btn-success"> Proceed to Payment</a>
        </div>
    </div>
</div>
       
<%- include("../partials/footer") %>