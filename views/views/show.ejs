<%-include("./partials/header")%>
<%-include("./partials/navbar")%>
<link rel="stylesheet" href="/css/star.css">


        <div class="container mt-5">
            
                <div class="row">
                   <div class="container mt-5">
                    <%-include("./partials/flash")%>
                   </div>
                    <div class="col-lg-6 mt-5">
                        
                        <div class="card" style="width: 25rem;">
                            <div class="card-body">
                                <img src="<%=product.img%>" class="card-img-top">
                                <h5 class="card-title">
                                    <%= product.name %>
                                </h5>
                                <h5 class="card-title">
                                    <%= product.price %>
                                </h5>
                                <p class="card-text">
                                    <%= product.desc%>
                                </p>
                                <a href="/user/<%=currentUser._id%>/payment" class="btn btn-success">Buy Now</a>
                                &nbsp;
                                <a href="/products/<%=product._id%>/edit" class="btn btn-secondary">Edit</a>
                                <div class="mb-3 mt-3">
                                    <form action="/user/<%=product._id%>/cart" method="post">
                                        <button class="btn btn-primary">Add to Cart</button>
                                    </form>
                                </div>
                                <form action="/products/<%=product._id%>?_method=DELETE" method="POST">
                                    <button class="btn btn-danger mt-3">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6  mt-5">
                        <h5 class="display-5 mb-2"><strong>Leave a Review</strong></h5>
                        <form action="/products/<%=product._id%>/review" class="needs-validation" method="post"
                            novalidate>
                            <div class="mb-3">
                                <fieldset class="starability-basic">
                                    <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
                                    <input type="radio" id="first-rate1" name="rating" value="1" />
                                    <label for="first-rate1" title="Terrible">1 star</label>
                                    <input type="radio" id="first-rate2" name="rating" value="2" />
                                    <label for="first-rate2" title="Not good">2 stars</label>
                                    <input type="radio" id="first-rate3" name="rating" value="3" />
                                    <label for="first-rate3" title="Average">3 stars</label>
                                    <input type="radio" id="first-rate4" name="rating" value="4" />
                                    <label for="first-rate4" title="Very good">4 stars</label>
                                    <input type="radio" id="first-rate5" name="rating" value="5" />
                                    <label for="first-rate5" title="Amazing">5 stars</label>
                                  </fieldset>
                            </div>
                            <div class="mb-3">
                                <label for="comment" class="form-label"><strong>Comment</strong></label>
                                <textarea name="comment" class="form-control" cols="30" rows="3" required></textarea>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success">Submit</button>
                        </form>
                        <div class="mb-3 mt-5">
                            <%for(let review of product.reviews){%>
                                <div class="card mb-3">
                                    <div class="card-body">
                                       
                                        <p class="starability-result" data-rating="<%=review.rating%>"> </p>
                                        </h5>
                                        <p class="card-text">
                                           <strong> Review : </strong><%=review.comment%>
                                        </p>

                                        <strong class="text-capitalize">By <%=review.user %></strong>
                                    </div>
                                </div>

                                <%}%>
                        </div>

                    </div>
                </div>

        </div>


        <%- include("./partials/footer") %>